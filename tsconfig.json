{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node16",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "target",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "esnext"
    },
    "include": [
        "src/**/*",
        "typings/*.d.ts"
    ]
}
